<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#c2d6d6"
    tools:context=".QuestionCreate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/set_exam_name"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Question_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="1"
            android:textStyle="bold"
            android:layout_marginRight="14dp"/>
        <EditText
            android:id="@+id/Question_text"
            android:hint="Enter The Question Here"
            android:backgroundTint="#000000"
            android:textSize="23sp"
            android:textCursorDrawable="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="A. "
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/OptionA"
                android:hint="Option A"
                android:textSize="23sp"
                android:backgroundTint="#000000"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="B. "
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/OptionB"
                android:hint="Option B"
                android:textSize="23sp"
                android:backgroundTint="#000000"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="C. "
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/OptionC"
                android:hint="Option C"
                android:textSize="23sp"
                android:backgroundTint="#000000"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="D. "
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/OptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option D"
                android:textSize="23sp"
                android:backgroundTint="#000000"
                android:textCursorDrawable="@null" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:text="Enter The Correct Option Number"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/OptionChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#000000"
            android:textSize="23sp"
            android:textCursorDrawable="@null"
            android:hint="A/B/C/D" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/question_button"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="Add question"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/add_question_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Add Question"
                android:textSize="22sp"
                android:layout_marginTop="18dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/create_exam_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Exam"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>