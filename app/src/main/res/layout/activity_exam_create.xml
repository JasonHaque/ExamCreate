<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#c2d6d6"
    tools:context=".ExamCreateActivity">
    <EditText
        android:id="@+id/exam_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write subject name for exam"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:textCursorDrawable="@null"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose question format"
        android:textColor="#000000"
        android:textSize="22sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/mcqid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MCQ"
            android:buttonTint="#008080"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"/>
        <CheckBox
            android:id="@+id/writtenid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Written"
            android:buttonTint="#008080"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/exam_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Write exam date"
        android:textColor="#000000"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#000000"
        android:textCursorDrawable="@null"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/create_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:background="#008080"
        android:text="Create Exam"/>
    <Button
        android:id="@+id/exam_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:background="#001a1a"
        android:text="Back"/>
</LinearLayout>